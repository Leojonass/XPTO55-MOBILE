<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pro_register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#2A8DD2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="30sp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/logocpa"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/rounded_rectangle"
                />
            <LinearLayout
                android:layout_width="1.5dp"
                android:layout_height="53dp"
                android:background="#E4FFFFFF"
                android:layout_marginRight="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cadastro"
                android:textColor="#DDFFFFFF"
                android:textSize="30dp"
                android:layout_marginTop="3.5sp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="520sp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#FFFFFF"
            android:paddingTop="15sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >
                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/name"
                        android:layout_margin="17dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="Nome completo"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >
                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/email"
                        android:layout_margin="17dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="Email"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >

                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="17dp"
                        android:src="@mipmap/date" />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="Data de nascimento"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >
                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/phone"
                        android:layout_margin="17dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="NÂ° Celular"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >
                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/cpf"
                        android:layout_margin="17dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="CPF"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >
                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/lock"
                        android:layout_margin="17dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="Senha"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >
                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/confirmpass"
                        android:layout_margin="17dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="Confirmar senha"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >
                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/home"
                        android:layout_margin="17dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="Nome completo"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                >
                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="55sp"
                    android:background="@drawable/rounded_left_border"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/home"
                        android:layout_margin="17dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="#F9F9F9"
                    android:paddingLeft="10sp"
                    android:textSize="20sp"
                    android:hint="Nome completo"
                    />
            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:background="#fff"
            android:gravity="center">
            <Button
                style="@style/OrangeButton"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded_rectangle"
                android:text="Cancelar" />

            <Button
                style="@style/BlueButton"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded_rectangle"
                android:text="Finalizar"
                android:layout_marginLeft="10sp"
                />


        </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>